#:import get_color_from_hex kivy.utils.get_color_from_hex
<Gerenciador>:
    Login:
        name: 'login'
    Home:
        name: 'home'
    Equipamento:
        name: 'equipamento'
    Despesas:
        name: 'despesa'
    Propriedade:
        name: 'propriedade'
    Venda:
        name: 'venda'
    Relatorio:
        name: 'relatorio'

<Background@FloatLayout>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/background.jpg'

<GridLay@GridLayout>:
    cols: 1
    spacing: 5
    size_hint: .9, .4
    pos_hint: {"center_x": .5, "center_y": .5}
    spacing: 20

<TextDefault@TextInput>:
    multiline: False
    size_hint_y: None
    height: 100

<Login>:
    Background:
        Image:
            size_hint: .3, .2,
            pos_hint: {"center_x": .5, "center_y": .75}
            source: 'images/icone.png'

        Label:
            id: msg
            size_hint: .7, .1
            pos_hint: {"center_x": .5, "center_y": .55}

        GridLay:
            Label:
                text: 'Nome do Proprietario:'
                font_name: 'Roboto-BoldItalic'
                size_hint_x: .6
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                color: get_color_from_hex('#FFFFFF')
                bold: True

            TextDefault:
                id: nome

            Label:
                text: "Nome da fazenda:"
                font_name: 'Roboto-BoldItalic'
                size_hint_x: .6
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                color: get_color_from_hex('#FFFFFF')
                bold: True  

            TextDefault:
                id: fazenda
            
            Label:

            Button:
                text: "REGISTRAR-SE"
                size_hint: 2., 2.
                on_release: app.salvaLogin(nome, fazenda)
                on_release: app.root.current = 'home'
<Home>:
    Background:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            id: actBar
            pos_hint: {'top':1}
            background_normal: ''
            background_down: ''
            background_color: 0, 1, 0, 1

            ActionView:
                use_separator: True
                ActionPrevious:
                    app_icon_width: 0
                    app_icon_height: 0
                    id: mostranome
                    title: 'Tela Inicial'
                    with_previous: False

                ActionOverflow:
                
                ActionGroup:
                    text: 'CADASTRAR '
                    ActionButton:
                        text: 'EQUIPAMENTOS'
                        on_press: app.root.current = 'equipamento'

                    ActionButton:
                        text: 'DESPESAS'
                        on_press: app.root.current = 'despesa'

                    ActionButton:
                        text: 'VENDA'
                        on_press: app.root.current = 'venda'

                    ActionButton:
                        text: 'PROPRIEDADE'
                        on_press: app.root.current = 'propriedade'

                ActionGroup:
                    text: 'RELATORIOS'

                    ActionButton:
                        text: 'DESPESAS'
                    ActionButton:
                        text: 'GERAL'
                        on_release: app.root.current = 'relatorio'

                ActionGroup:
                    text: 'Ajuda'

                    ActionButton:
                        text: 'Sobre'
                    ActionButton:
                        text: 'Ajuda'

<Equipamento>:
    Background:
        GridLay:
            Label:
                text:'INVENTARIO DE EQUIPAMENTOS'
                size_hint_x: .6
                color: get_color_from_hex('#FFFFFF')
                bold: True 

            TextDefault:
                hint_text: 'Nome do Equipamento'
                id: descricao

            TextDefault:
                hint_text:"Valor do equipamento R$"
                id : valor
                input_filter: 'float'

            TextDefault:
                hint_text:"Anos de posse do equipamento"
                id : TempoUso
                input_filter: 'int'

            TextDefault:
                hint_text:"Vida util do equipamento"
                id : vidaUtil
                input_filter: 'int'
                
            Button:
                text:"INSERIR DADOS"
                size_hint: 2., 2.
                on_release: root.limpar()
                on_release: app.guardaDados(descricao.text,valor.text,TempoUso.text,vidaUtil.text)
                on_release: app.root.current = 'home'

    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            id: actBar
            pos_hint: {'top':1}  #na parte superior da tela
            background_normal: '' #alteramos as cores
            background_down: ''
            background_color: 0, 1, 0, 1
            ActionView:
                use_separator: True
                ActionPrevious:
                    on_release: app.root.current = 'home'
                    title: 'Equipamentos'


<Despesas>:
    Background:
        GridLay:
            Label:
                text:'CUSTOS DE PRODUÇÃO'
                size_hint_x: .6
                color: get_color_from_hex('#FFFFFF')
                bold: True 

            TextDefault:
                hint_text: 'Ex:2019-10-15'
                id: mes
            
            TextDefault:
                hint_text:"Descrição do gasto"
                id: texto

            TextDefault:
                hint_text:"Valor Gasto"
                id : gastoMes
                input_filter: 'float'

            Button:
                text:"INSERIR DADOS"
                size_hint: 2., 2.
                on_release: app.root.current = 'home'
                on_release: root.limpar()
                on_release: app.despesas(mes, texto, gastoMes)
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            id: actBar
            pos_hint: {'top':1}  #na parte superior da tela
            background_normal: '' #alteramos as cores
            background_down: ''
            background_color: 0, 1, 0, 1
            ActionView:
                use_separator: True
                ActionPrevious:
                    on_release: app.root.current = 'home'
                    title: 'Despesas'

<Venda>:
    Background:
        GridLay:
            Label:
                text:'VENDAS DE PRODUTOS E ANIMAIS'
                size_hint_x: .6
                color: get_color_from_hex('#FFFFFF')
                bold: True

            TextDefault:
                hint_text: 'Descrição da Venda'
                id: descrevaVenda

            TextDefault:
                hint_text: 'Quantidade'
                id: quantidadeVenda
                input_filter: 'int'

            TextDefault:
                hint_text: 'Valor da Venda'
                id: valorVenda
                input_filter: 'float'

            Button:
                text:"INSERIR DADOS"
                size_hint: 2., 2.
                on_release: app.root.current = 'home'
                on_release: root.limpar()

    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            id: actBar
            pos_hint: {'top':1}
            background_normal: ''
            background_down: ''
            background_color: 0, 1, 0, 1
            ActionView:
                use_separator: True
                ActionPrevious:
                    on_release: app.root.current = 'home'
                    title: 'Venda'

<Propriedade>:
    Background:
        GridLay:
            Label:
                text:'PROPRIEDADE'
                size_hint_x: .6
                color: get_color_from_hex('#FFFFFF')
                bold: True

            TextDefault:
                hint_text: 'Endereço'
                id: endereco

            TextDefault:
                hint_text: 'Tamanho da fazenda'
                id: tamanhoFazenda
                input_filter: 'float'

            TextDefault:
                hint_text: 'Tamanho da Lamina D\'agua'
                id: tamanhoDagua
                input_filter: 'float'

            TextDefault:
                hint_text: 'Quantidade de tanques'
                id: QtdTanques
                input_filter: 'int'

            Button:
                text:"INSERIR DADOS"
                size_hint: 2., 2.
                on_release: app.root.current = 'home'
                on_release: root.limpar()

    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            id: actBar
            pos_hint: {'top':1}
            background_normal: ''
            background_down: ''
            background_color: 0, 1, 0, 1
            ActionView:
                use_separator: True
                ActionPrevious:
                    on_release: app.root.current = 'home'
                    title: 'Propriedade'
<Relatorio>
    Background:
        GridLay:
            Label:
                text:'AQUI ESTAO TODAS SUAS INFORMACOES IMPORTANTES'
                size_hint_x: .9
                color: get_color_from_hex('#FFFFFF')
                bold: True

            Label:
                text: 'Despesas TOTAIS'
                font_name: 'Roboto-BoldItalic'
                size_hint_x: .6
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                color: get_color_from_hex('#FFFFFF')
                bold: True
            TextInput:
                hint_text: ''
                id: gastosTOTAIS
